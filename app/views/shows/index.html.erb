<table class="form_demo">
  <thead class="ui-widget-header">
    <tr>
      <th> Show Name</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody class="ui-widget-content">

    <% @shows.each do |show| %>
      <tr>
        <td><%= show.name %></td>
        <td><%= button_to 'Edit', edit_show_path(show), :method => :get %></td>
        <td><%= button_to 'Destroy', show, :confirm => 'Are you sure?', :method => :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate @shows %>
<br />
<%= button_to 'New Show', new_show_path, :method => :get %>
