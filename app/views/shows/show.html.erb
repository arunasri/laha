<p id="notice"><%= notice %></p>

<table width="100%" style="height: 100%;" cellpadding="10" cellspacing="0" border="0">
  <tbody>
    <tr>
      <th> Name </th>
      <th> Youtube </th>
    </tr>

    <% @show.videos.each do | video | %>
      <tr>
        <td> <%= link_to video.name, edit_video_path(video) %> </td>
        <% unless video.youtube_id %> 
          <%= form_for(video, :class => "edit-video") do |f| %>
            <td><%= f.label :url, "Youtube url"%></td>
            <td><%= f.text_field  :url %></td>
            <td><%= f.submit  %></td>
          <% end %>
        <% end %>
      </tr>
    <% end %>

  </tbody>
</table>


<%= link_to 'Edit', edit_show_path(@show) %>
